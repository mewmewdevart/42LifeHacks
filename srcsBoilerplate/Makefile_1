NAME = project
LIB_PROJECT = lib_project.a

# compilation and settings
CC = cc
CFLAGS = -Wall -Wextra -Werror -g3
LFLAGS = -lft 
AR = ar rcs
REMOVE = rm -rf
MKDIR = mkdir -p
# path variables
SRCS_PATH =  ./srcs/
OBJS_PATH = ./objs/
LIBS_PATH = ./libs/
BINS_PATH = ./bin/
HEADER_PATH = ./include/

# import library
LIBFT_PATH = $(LIBS_PATH)libft/

# sources files
SRCS_FILES = utils.c \

SOURCES = $(addprefix $(SRCS_PATH), $(SRCS_FILES))

OBJS_FILES = $(patsubst %.c, %.o, $(SRCS_FILES))
OBJECTS = $(addprefix $(OBJS_PATH), $(OBJS_FILES))

INCLUDES = -I $(LIBFT_PATH)
PATH_LIBS = -L$(LIBFT_PATH)

# colors
DEF_COLOR = \033[0;39m
GRAY = \033[0;90m
RED = \033[0;91m
GREEN = \033[0;92m
YELLOW = \033[0;93m
BLUE = \033[0;94m
MAGENTA = \033[0;95m
CYAN = \033[0;96m
WHITE = \033[0;97m

# targets
all : make_directory $(NAME)
	@echo "$(GREEN)◞( ､ᐛ)､＿/ The Makefile of [PROJECT X] has been compiled!$(DEF_COLOR)" 

make_directory :
	@$(MKDIR) $(BINS_PATH)
	@$(MKDIR) $(OBJS_PATH)

$(NAME) : $(OBJS_FILES)
	@make -C $(LIBFT_PATH) --no-print-directory
	@$(AR) $(LIB_PROJECT) $(OBJS_FILES)
	@$(CC) $(CFLAGS) $(OBJS_FILES) -o $(NAME) $(SRCS_PATH)main.c $(PATH_LIBS) $(LFLAGS)
	@mv $(NAME) $(BINS_PATH)
	@mv $(OBJS_FILES) $(OBJS_PATH)
	@mv $(LIB_PROJECT) $(HEADER_PATH)

$(OBJS_FILES) :
	@$(CC) $(CFLAGS) -I $(HEADER_PATH) -c $(SOURCES)

clean :
	@$(REMOVE) $(OBJS_PATH)
	@make clean -C $(LIBFT_PATH) --no-print-directory
	@echo "$(BLUE)[PIPEX] Object files cleaned!$(DEF_COLOR)"

fclean : clean
	@$(REMOVE) $(NAME) $(HEADER_PATH)$(LIB_PROJECT) $(BINS_PATH) $(OBJS_PATH)
	@make fclean -C $(LIBFT_PATH) --no-print-directory
	@echo "$(BLUE)[PIPEX] Executable files and directories cleaned!$(DEF_COLOR)"

re : fclean all

.PHONY : all clean fclean re make_directory libft pipex